<div class="show-container">
  <h1><%= @article.title %></h1>
  <%= link_to edit_article_path do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to article_path(@article), method: :delete do %>
    <i class="fa fa-trash-o"></i>
  <% end %>
  <p><%= @article.content %></p>
  <%= link_to 'Return to List', articles_path %>
</div>

